<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class ='table table-hover'>
  <thead>
    <tr>
      <th>Category name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category_name %></td>
                <td><%= link_to '<button type="button" class="btn btn-success btn-sm" >Show</button>'.html_safe , category %></td>
        <td><%= link_to '<button type="button" class="btn btn-primary btn-sm" >Edit</button>'.html_safe, edit_order_path(category) %></td>
        <td><%= link_to '<button type="button" class="btn btn-danger btn-sm" >Delete</button>'.html_safe, category, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
